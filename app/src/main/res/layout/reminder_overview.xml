<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reminder_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/reminder_list_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATE: 16/03/2016"
        android:layout_below="@+id/reminder_list_item_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/reminder_list_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: 12:05"
        android:layout_below="@+id/reminder_list_item_date"/>

    <TextView
        android:id="@+id/reminder_list_item_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes stuff here"
        android:textSize="15sp"
        android:gravity="left"
        android:layout_below="@+id/reminder_list_item_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <!-- Set invisible textview for the id in the database of the reminder -->
    <TextView
        android:id="@+id/reminder_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key here: invisible"
        android:layout_below="@+id/reminder_list_item_notes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>